#:import hex kivy.utils.get_color_from_hex
<SigninWindow>:
    orientation: 'vertical'
    canvas.before: 
        Color:
            rgba: hex('#3EBFAE')
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: .05
    BoxLayout:
        canvas.before:
            Color:
                rgba: hex('#E1DDE7')
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: .9
        Label:
            size_hint_x: .3
        BoxLayout:
            size_hint_x: .4
            orientation: 'vertical'
            Label:
                size_hint_y: .15
                text: 'Bienvenido'
                color: (0,0,0,1)
            Label:
                id: singnin_notificacion
                size_hint_y: .15
                color:(1, .2, .2, 1)
            TextInput:
                id: username
                size_hint_y: .1
                hint_text: 'Ingrese Usuario'
                multiline: False
                write_tab: False
                on_text_validate: root.verificacion(self.text, password.text)
            TextInput:
                id: password
                size_hint_y: .1
                hint_text: 'Ingrese contrase√±a'
                multiline: False
                write_tab: False
                password: True
                on_text_validate: root.verificacion(username.text, self.text)
            Button:
                size_hint_y: .1
                background_normal: ''
                background_color: hex('#393939')
                text: 'Ingresar'
                on_release: root.verificacion(username.text, password.text)
            Label:
                size_hint_y: .4
        Label:
            size_hint_x:.3
    BoxLayout:
        size_hint_y: .05